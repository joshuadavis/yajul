<?xml version="1.0"?>
<?xml-stylesheet type="text/xsl" href="stylesheets/properties.xsl"?>
<!-- Build properties - these override any property specified in the build -->
<properties>

   <!-- Properties of the build -->
   <build>
      <!-- What to tell the compiler -->
      <compiler
       emacs="on"
       warnings="true"
       pedantic="false"
       depend="true"
       fulldepend="true"
       debug="on"
       optimize="off"
       deprecation="on"
       nowarn="off"
       type="jikes"
       vm="1.3" />
   </build>

   <centipede>
      <tools>
         <cents>
            <checkstyle >
              <properties>conf/checkstyle.properties</properties>
            </checkstyle>
            <forrest loglevel="WARN">
              <!-- Custom site skin -->
               <skin name="simple-site">
                  <navlinks>
                     <link1
                      href="http://www.sf.net/">sourceforge</link1>
                     <link2
                      href="http://yajul.sourceforge.net">YAJUL</link2>
                  </navlinks>

                  <logo>
                     <group
                      src="http://sourceforge.net/sflogo.php?group_id=56167&amp;amp;type=5"
                      href="http://www.sourceforge.net" />
                     <project
                      src="images/project-logo.gif"
                      href="https://sourceforge.net/projects/yajul/" />

                  </logo>
               </skin>
            </forrest>
         </cents>
      </tools>
   </centipede>
</properties>

