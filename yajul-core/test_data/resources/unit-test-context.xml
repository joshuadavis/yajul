<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">

<!--
  - Application context definition for unit testing.
-->

<beans>

    <bean id="testBean" class="org.yajul.framework.test.SimpleBean">
        <property name="exampleProperty">
            <value>exampleProperty - value</value>
        </property>
        <property name="userName">
            <value>${user.name}</value>
        </property>
        <property name="resource">
            <value>file://./resources/test-properties.properties</value>
        </property>
    </bean>

    <bean id="testEnumTypeMap" class="org.yajul.enumtype.EnumTypeMap">
        <constructor-arg>
            <list>
                <value>enum/EnumTest1.xml</value>
                <value>enum/EnumTest2.xml</value>
            </list>
        </constructor-arg>
    </bean>

    <bean class="org.springframework.beans.factory.config.CustomEditorConfigurer">
        <property name="customEditors">
            <map>
                <entry key="org.springframework.core.io.Resource">
                    <bean id="resourceEditor" class="org.yajul.framework.test.ResourceEditor">
                    </bean>
                </entry>
            </map>
        </property>
    </bean>

</beans>
