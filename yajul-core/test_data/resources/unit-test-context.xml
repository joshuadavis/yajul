<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">

<!--
  - Application context definition for unit testing.
-->

<beans>

    <bean id="testBean" class="org.yajul.framework.test.SimpleBean">
        <property name="exampleProperty">
            <value>exampleProperty - value</value>
        </property>
        <property name="userName">
            <value>${user.name}</value>
        </property>
    </bean>

    <bean id="testEnumTypeMap" class="org.yajul.enum.EnumTypeMap">
        <constructor-arg>
            <list>
                <value>enum/EnumTest1.xml</value>
                <value>enum/EnumTest2.xml</value>
            </list>
        </constructor-arg>
    </bean>

</beans>
